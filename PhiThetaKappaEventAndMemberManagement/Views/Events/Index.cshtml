@model IEnumerable<Events>

<table>
    <tr>
        <th style="width:10em">Event Name</th>
        <th style="width:10em">Event Location Name</th>
        <th style="width:10em">Event Description</th>
        <th style="width:10em">Event Update</th>
    </tr>
    @foreach (Events events in Model)
    {
        <tr>
            <td>@events.EventName</td>
            <td>@events.EventLocationName</td>
            <td>@events.EventDescription</td>
            <td>
                <form asp-action="UpdateEvents" method="post">
                    <input type="hidden" name="EventID" value="@events.EVENTID" />
                    <button type="submit">Edit</button>
                </form>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="EventsForm" class="btn-sm btn-default btn-primary">Create New Event</a>